        }

        // Password strength indicator
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('password');
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strengthDiv = document.getElementById('passwordStrength');
                    
                    if (password.length === 0) {
                        strengthDiv.textContent = 'Password must be at least 12 characters with uppercase, lowercase, numbers, and special characters.';
                        strengthDiv.className = 'mt-2 text-sm text-gray-600';
                    } else if (password.length < 12) {
                        strengthDiv.textContent = 'Password too short. Need ' + (12 - password.length) + ' more characters.';
                        strengthDiv.className = 'mt-2 text-sm text-red-600';
                    } else {
                        const hasUpper = /[A-Z]/.test(password);
                        const hasLower = /[a-z]/.test(password);
                        const hasNumber = /\d/.test(password);
                        const hasSpecial = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\?]/.test(password);
                        
                        if (hasUpper && hasLower && hasNumber && hasSpecial) {
                            strengthDiv.textContent = 'Strong password ‚úì';
                            strengthDiv.className = 'mt-2 text-sm text-green-600';
                        } else {
                            strengthDiv.textContent = 'Need uppercase, lowercase, number, and special character.';
                            strengthDiv.className = 'mt-2 text-sm text-yellow-600';
                        }
                    }
                });
            }
        });
